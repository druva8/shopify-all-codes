    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const variantSelects = document.querySelector('variant-selects');
        if (variantSelects) {
          const sizePickers = variantSelects.querySelectorAll('.size-picker');

          sizePickers.forEach((picker) => {
            // Get all radio inputs
            const allInputs = Array.from(picker.querySelectorAll('input[type="radio"]'));

            // Filter only visible inputs (ignore hidden toggles like in/cm)
            const visibleInputs = allInputs.filter((input) => input.offsetParent !== null);

            if (visibleInputs.length === 1) {
              const targetInput = visibleInputs[0];

              // Force check if not checked
              if (!targetInput.checked) {
                targetInput.checked = true;
                targetInput.setAttribute('checked', 'checked');
              }

              // Trigger events to notify other scripts
              targetInput.dispatchEvent(new Event('change', { bubbles: true }));
              targetInput.click();

              // MANUALLY UPDATE THE LABEL UI
              // Find the legend label wrapper
              const legend = picker.querySelector('legend');
              if (legend) {
                // Find the span that holds the selected value text
                const selectedSpan = legend.querySelector('[id^="selected-"]');
                if (selectedSpan) {
                  // Update text content
                  selectedSpan.textContent = ' ' + targetInput.value;
                  // Ensure it is visible
                  selectedSpan.style.display = 'inline';
                }
              }
            }
          });
        }
      });
    </script>
