<script>
  const qtyIconBtn = document.querySelector('.qty-icon-btn');
  if (qtyIconBtn) {
    qtyIconBtn.addEventListener('click', () => {
      const qtyInput = document.querySelector('#Quantity-{{ section.id }}');
      if (qtyInput) {
        qtyInput.focus();
        qtyInput.click();
      }
    });
  }
</script>
