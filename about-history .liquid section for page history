  </div>

  <div class="swiper swiper-main-template--our_legacy_section swiper-initialized swiper-horizontal swiper-autoheight">
    <div class="swiper-wrapper" id="swiper-wrapper-legacy" aria-live="polite" style="height: 280px;">
      {% for block in section.blocks %}
        <div class="swiper-slide" style="width: 1381px; margin-right: 30px;" role="group" aria-label="{{ forloop.index }} / {{ section.blocks.size }}">
          <div class="legacy-slide">
            <div class="legacy-content">
              <h3 class="legacy-head">{{ block.settings.title }}</h3>
              <p class="legacy-text">{{ block.settings.description }}</p>
            </div>
            <div class="legacy-image">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt | default: block.settings.title }}" loading="lazy" width="651" height="367">
              {% else %}
                <p>No image uploaded</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

