 document.addEventListener('DOMContentLoaded', function () {
    const checkoutBtn = document.querySelector('#custom-checkout');

    if (checkoutBtn) {
      checkoutBtn.addEventListener('click', function (e) {
        // Prevent multiple clicks
        if (checkoutBtn.classList.contains('disabled')) return;

        const spinner = this.querySelector('.checkout-spinner');
        const text = this.querySelector('.checkout-text');

        // Hide text & show spinner
        text.style.display = 'none';
        spinner.classList.remove('hidden');
        setTimeout(() => spinner.classList.add('opacity-100'), 10);

        // Disable the button and change color
        this.classList.add('disabled');
        this.disabled = true;
      });
    }



.checkout-btn {
    position: relative;
    overflow: hidden;
    transition: background-color 0.3s ease, opacity 0.3s ease;
  }

  /* Disable color after click */
  .checkout-btn.disabled {
    background-color: #9ca3af !important; /* gray */
    cursor: not-allowed;
    opacity: 0.7;
  }

  .checkout-spinner svg {
    width: 24px;
    height: 24px;
  }

  .checkout-spinner {
    transition: opacity 0.3s ease;

