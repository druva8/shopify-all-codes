                console.log("errorEl", errorEl);
                console.log("redirectUrl", redirectUrl);
                if (errorEl) {
                  console.error('Login failed:', errorEl.innerText.trim());
                  document.querySelector('#login-error').innerText = errorEl.innerText.trim();
                } else {
