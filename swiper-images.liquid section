{% comment %}
  {% javascript %}
    function initDiscoverNalliSwiper() {
      const swiperEl = document.querySelector('.mob-fancy.swiper');

      // Only initialize swiper on mobile devices
      if (window.innerWidth <= 768 && swiperEl && !swiperEl.classList.contains('swiper-initialized')) {
        new Swiper(swiperEl, {
          slidesPerView: 1,
          spaceBetween: 10,
          loop: true,
          navigation: {
            nextEl: '.swiper-btn-next',
            prevEl: '.swiper-btn-prev',
          },
          scrollbar: {
            el: '.swiper-scrollbar',
            draggable: true,
          },
        });
      }
    }

    // Initialize on load
    document.addEventListener('DOMContentLoaded', initDiscoverNalliSwiper);

    // Re-check when screen resizes
    window.addEventListener('resize', () => {
      const swiperEl = document.querySelector('.mob-fancy.swiper');
      if (window.innerWidth > 768 && swiperEl && swiperEl.swiper) {
        swiperEl.swiper.destroy(true, true);
      } else if (window.innerWidth <= 768) {
        initDiscoverNalliSwiper();
      }
    });
  {% endjavascript %}
{% endcomment %}
