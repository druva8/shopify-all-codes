<div class="account-container">
  <div class="account-spacing-top">
    <div class="background-section">
      <h2 class="heading-primary">
        {%- if customer -%}
          Hi, {{ customer.first_name -}}
        {%- else %}
          <a
            href="{{ routes.root_url }}"
            class="header__heading-link link link--text focus-inset logo-link mob-app anf-logo"
          >
            {%- if settings.logo != blank -%}
              <div class="header__heading-logo-wrapper">
                {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
                {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
                {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
                {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
                {{
                  settings.logo
                  | image_url: width: 600
                  | image_tag:
                    class: 'header__heading-logo motion-reduce',
                    widths: widths,
                    height: logo_height,
                    width: settings.logo_width,
                    alt: logo_alt,
                    sizes: sizes,
                    preload: true
                }}
              </div>
            {%- else -%}
              {% comment %} <span class="h2">{{ shop.name }}</span> {% endcomment %}
              <div class="logo" data-testid="logo">
                <span
                  aria-hidden="true"
                  class="icon"
                  data-icon="logo-horizontal"
                  data-testid="icon"
                ></span>
              </div>
            {%- endif -%}
          </a>
          <a
            href="{{ section.settings.kids_page.url }}"
            class="header__heading-link link link--text focus-inset logo-link mob-app"
          >
            {%- if settings.logo != blank -%}
              <div class="header__heading-logo-wrapper">
                {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
                {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
                {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
                {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
                {{
                  settings.logo
                  | image_url: width: 600
                  | image_tag:
                    class: 'header__heading-logo motion-reduce',
                    widths: widths,
                    height: logo_height,
                    width: settings.logo_width,
                    alt: logo_alt,
                    sizes: sizes,
                    preload: true
                }}
              </div>
            {%- else -%}
              {% comment %} <span class="h2">{{ shop.name }}</span> {% endcomment %}
              <div class="logo" data-testid="logo">
                <span
                  aria-hidden="true"
                  class="icon"
                  data-icon="kids-logo-header"
                  data-testid="icon"
                ></span>
              </div>
            {%- endif -%}
          </a>
        {% endif -%}
      </h2>
      {% unless customer %}
        <div class="account-spacing-middle mob-log-btn">
          <modal-opener class="mob-modal-opener" data-modal="#LoginModal">
            <button class="action-button log-btn" data-action="open-login" data-variant="secondary">
              <span class="btn-span">{{ 'customer.login_page.sign_in' | t }}</span>
            </button>
          </modal-opener>
          <modal-opener class="mob-modal-opener" data-modal="#CreateAccountModal">
            <button class="action-button create-acc-btn" data-action="open-join">
              <span>{{ 'customer.login_page.create_account' | t }}</span>
            </button>
          </modal-opener>
        </div>
      {% endunless %}
    </div>
    <div class="account-spacing-bottom mob-app-menu">
      {% assign in_section = false %}
      {% for block in section.blocks %}
        {% if block.type == 'divider' %}
          {% if in_section %}
            </ul>
            </div>
            <hr class="divider-line">
          {% endif %}
          {% assign in_section = false %}
        {% elsif block.type == 'menu_item' %}
          {% if block.settings.show_only_if_logged_in and customer == null %}
            <!-- skip -->
          {% else %}
            {% unless in_section %}
              <div class="link-section">
                <ul class="link-list">
                  {% assign in_section = true %}
            {% endunless %}
            <li class="mob-app-menu-li" {{ block.shopify_attributes }}>
              {% if block.settings.link_type == 'snippet' %}
                <div class="icon-link-text">
                  <span>
                    <span class="mob-app-title">{{ block.settings.title }}</span>
                    {% if block.settings.subtitle != blank %}
                      <span class="block font-medium mob-app-subtitle">{{ block.settings.subtitle }}</span>
                    {% endif %}
                  </span>
                  <span aria-hidden="true" class="icon mob-app-icon" data-icon="right-thin" data-testid="icon"></span>
                </div>
                {% if block.settings.snippet != blank %}
                  {% include block.settings.snippet %}
                {% endif %}
              {% else %}
                <a
                  href="{% case block.settings.link_type %}{% when 'page' %}{{ block.settings.page.url }}{% when 'url' %}{{ block.settings.url }}{% when 'phone' %}tel:{{ block.settings.value }}{% when 'whatsapp' %}https://wa.me/{{ block.settings.value }}{% when 'email' %}mailto:{{ block.settings.value }}{% endcase %}"
                  class="icon-link-text"
                >
                  <span>
                    <span class="mob-app-title">{{ block.settings.title }}</span>
                    {% if block.settings.subtitle != blank %}
                      <span class="block font-medium mob-app-subtitle">{{ block.settings.subtitle }}</span>
                    {% endif %}
                  </span>
                  <span aria-hidden="true" class="icon mob-app-icon" data-icon="right-thin" data-testid="icon"></span>
                </a>
              {% endif %}
            </li>
          {% endif %}
        {% elsif block.type == 'dropdown_menu' %}
          {% unless in_section %}
            <div class="link-section">
              <ul class="link-list">
                {% assign in_section = true %}
          {% endunless %}
          <li class="mob-app-menu-li" {{ block.shopify_attributes }}>
            <details class="dropdown-title">
              <summary class="icon-link-text">
                <span>
                  <span class="mob-app-title">{{ block.settings.title }}</span>
                  {% if block.settings.subtitle != blank %}
                    <span class="block font-medium mob-app-subtitle">{{ block.settings.subtitle }}</span>
                  {% endif %}
                </span>
                <span
                  aria-hidden="true"
                  class="icon mob-app-icon dropdown-icon"
                  data-icon="right-thin"
                  data-testid="icon"
                ></span>
              </summary>
              <div class="submenu">
                <ul class="link-list sub-list">
                  {% for i in (1..20) %}
                    {% assign sub_title = 'subitem_' | append: i | append: '_title' %}
                    {% assign sub_subtitle = 'subitem_' | append: i | append: '_subtitle' %}
                    {% assign sub_type = 'subitem_' | append: i | append: '_type' %}
                    {% assign sub_page = 'subitem_' | append: i | append: '_page' %}
                    {% assign sub_snippet = 'subitem_' | append: i | append: '_snippet' %}
                    {% assign sub_url = 'subitem_' | append: i | append: '_url' %}
                    {% if block.settings[sub_title] != blank %}
                      <li class="mob-app-menu-li sub-item">
                        {% if block.settings[sub_type] == 'snippet' %}
                          <div class="icon-link-text">
                            <span>
                              <span class="mob-app-title">{{ block.settings[sub_title] }}</span>
                              {% if block.settings[sub_subtitle] != blank %}
                                <span class="block font-medium mob-app-subtitle">
                                  {{- block.settings[sub_subtitle] -}}
                                </span>
                              {% endif %}
                            </span>
                            {% comment %} <span aria-hidden="true" class="icon mob-app-icon" data-icon="right-thin" data-testid="icon"></span> {% endcomment %}
                          </div>
                          {% if block.settings[sub_snippet] != blank %}
                            {% include block.settings[sub_snippet] %}
                          {% endif %}
                        {% else %}
                          <a
                            href="{% if block.settings[sub_type] == 'page' %}{{ block.settings[sub_page].url }}{% else %}{{ block.settings[sub_url] }}{% endif %}"
                            class="icon-link-text"
                          >
                            <span>
                              <span class="mob-app-title">{{ block.settings[sub_title] }}</span>
                              {% if block.settings[sub_subtitle] != blank %}
                                <span class="block font-medium mob-app-subtitle">
                                  {{- block.settings[sub_subtitle] -}}
                                </span>
                              {% endif %}
                            </span>
                            {% comment %} <span aria-hidden="true" class="icon mob-app-icon" data-icon="right-thin" data-testid="icon"></span> {% endcomment %}
                          </a>
                        {% endif %}
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            </details>
          </li>
        {% elsif block.type == 'country_switch' %}
          {% unless in_section %}
            <div class="link-section">
              <ul class="link-list">
                {% assign in_section = true %}
          {% endunless %}
          <li class="mob-app-menu-li" {{ block.shopify_attributes }}>
            <div
              class="flex items-center gap-5 country_switch_model"
              id="{{ block.settings.store_model_id }}"
            >
              <modal-opener class="content-center" data-modal="#{{ block.settings.regional_modal_id }}">
                <button class="flex items-center gap-5">
                  <span class="india-flag-svg w-[20px] h-[20px] flex items-center justify-center">
                    {% if block.settings.country_flag != blank %}
                      <img
                        src="{{ block.settings.country_flag | image_url: width: 20 }}"
                        alt="{{ block.settings.country_name }} flag"
                        width="20"
                        height="20"
                      >
                    {% else %}
                      <span
                        class="block w-8 h-8 bg-no-repeat bg-[length:auto_100%]"
                        style="background-image: url('{{ 'country-flags.png' | asset_url }}'); background-position: {{ block.settings.flag_position }};"
                      ></span>
                    {% endif %}
                  </span>
                  <span
                    class="text-xl underline text-primary country-footer"
                    data-role="selected-country-display"
                  >
                    {{- block.settings.country_name -}}
                  </span>
                </button>
              </modal-opener>
            </div>
          </li>
        {% endif %}
      {% endfor %}
      {% if in_section %}
        </ul>
        </div>
      {% endif %}
      {% if customer %}
        <div class="logout-section">
          <a href="{{ routes.account_logout_url }}" class="logout-btn">
            <span>{{ 'customer.account.sign_out' | t }}</span>
          </a>
        </div>
      {% endif %}
      <div class="terms_footer flex gap-2 py-8">
        <a href="/pages/website-terms-of-use" class="!text-[1.1rem] underline contrast-high">
