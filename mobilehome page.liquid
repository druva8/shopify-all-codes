<section
  class="container clickable-banner"
  style="
        margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  "
  data-mobile-link="{{ section.settings.mobile_redirect_link }}"
>
  <div class="desktop-view">
    {%- render 'custom-desktop-banner', settings: section.settings -%}
  </div>
  <div class="mobile-view">
    {%- render 'custom-mobile-banner', settings: section.settings -%}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.clickable-banner').forEach((banner) => {
      banner.addEventListener('click', (e) => {
        const mobileLink = banner.dataset.mobileLink;
        if (window.innerWidth <= 1024 && mobileLink) {
          window.location.href = mobileLink;
        }
      });
    });
  });
</script>

