{% comment %} {%- style -%}
  /* Section-specific CSS */
  .account-section {
    padding: 5px 0;
  }
  .account-section h2 {
    color: #253746;
    font-family: 'Garamond Premier Pro', serif;
    font-size: 2.8rem;
    font-weight: normal;
    line-height: 1.2857142857;
    letter-spacing: 0;
  }
  .account-section .subtitle {
    color: #5E5E5E;
    font-family: 'DS Trade Gothic', sans-serif;
    font-size: 13px;
  }
  .account-section .btn-login {
    background-color: #253746;
    color: white;
    padding: 0 15px;
    height: 50px;
    text-align: center;
    border: none;
  }
  .account-section .join-btn {
    height: 50px;
    border: 1px solid black;
    padding: 8px;
    font-weight: 600;
    flex: 1;
    margin-left: 8px;
  }
  .account-section .link-button {
    display: block;
    text-align: left;
    color: #000;
    text-decoration: none;
  }
  .account-section .icon-link-text {
    font-weight: bold;
  }
  .account-section .icon-link-text .block {
    display: block;
    font-weight: medium;
    color: #5E5E5E;
  }
  .account-section .link-arrow {
    display: inline-block;
    margin-left: 5px;
  }
  .account-section hr {
    height: 0.1px;
    margin: 25px 0;
    background-color: #c6c6c6;
    border: none;
  }
  .account-section .flex {
    display: flex;
    gap: 15px;
  }
  .account-section ul {
    padding-top: 11px;
    list-style: none;
  }
  .account-section li {
    margin-bottom: 11px;
  }
{%- endstyle -%}

