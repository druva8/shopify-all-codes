<script>
  document.addEventListener('DOMContentLoaded', () => {
    const accountModal = document.getElementById('account-modal');
    const buttons = [
      { selector: '[data-action="open-login"]', modalId: '#LoginModal' },
      { selector: '[data-action="open-join"]', modalId: '#CreateAccountModal' },
    ];

    buttons.forEach(({ selector, modalId }) => {
      const button = document.querySelector(selector);
      if (button && accountModal) {
        button.addEventListener('click', () => {
          // Check if the modal has a close method (Shopify custom element)
          if (typeof accountModal.close === 'function') {
            accountModal.close();
          } else {
            // Fallback to adding 'hidden' class
            accountModal.classList.add('hidden');
          }
        });
      }
    });
  });
