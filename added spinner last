  opacity: 0;
  pointer-events: none;
}

.checkout-spinner:not(.hidden),
.checkout-success:not(.hidden) {
  opacity: 0; /* Initial state before opacity-100 is added */
}

.checkout-spinner.opacity-100,
.checkout-success.opacity-100 {
  opacity: 1;
}

.checkout-text {
  transition: opacity 0.3s ease;
  
}
