    const ipCountryDataKey = 'ipCountryData';

    function updateFlag(position) {
      const flagContainer = document.querySelector('.india-flag-svg');
      if (flagContainer) {
        flagContainer.innerHTML = `
        <span class="block w-8 h-8 bg-no-repeat bg-[length:auto_100%]"
              style="background-image: url('{{ 'country-flags.png' | asset_url }}');
                     background-position: ${position};">
        </span>
      `;
      }
    }

    function updateCountryName(name) {
      document.querySelectorAll('[data-role="selected-country-display"]').forEach((el) => {
        el.textContent = name;
      });
    }

    function storeIPData(countryData) {
      localStorage.setItem(ipCountryDataKey, JSON.stringify(countryData));
      localStorage.setItem(ipLangSetKey, 'true');
    }

    function restoreIPData() {
      const storedData = localStorage.getItem('countryByUser') || localStorage.getItem(ipCountryDataKey);
      if (storedData) {
        const data = JSON.parse(storedData);
        console.log('Restored country data from localStorage:', data);

        updateFlag(data.position);
        updateCountryName(data.name);
      }
    }

    const currentLang = '{{ localization.language.iso_code }}';
    if (currentLang === 'en') {
      restoreIPData();
    }

    if (localStorage.getItem(ipLangSetKey) === 'true') return;

    try {
      const res = await fetch('{{ "country-flag.json" | asset_url }}');
      const countries = await res.json();
      let countryCode = 'ID';
      if (localStorage.getItem('countryByUser')) {
        const countryData = localStorage.getItem('countryByUser');
        countryCode = JSON.parse(countryData).code;
      } else {
        const ipRes = await fetch('https://ipapi.co/json/');
        const ipData = await ipRes.json();
        const countryCode = ipData.country_code;
      }

