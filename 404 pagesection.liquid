.custom-section-link-with-description {
  display: flex;
  flex-direction: column;
  gap: var(--gap);
  text-align: var(--align, left);
}
.custom-section-link-with-description .custom-section-icon {
  margin-bottom: var(--icon-gap);
  line-height: 0;
  display: flex;
  justify-content: var(--btn-align, flex-start);
}
.custom-section-link-with-description .custom-section-icon img {
  width: var(--icon-size);
  height: var(--icon-size);
  object-fit: contain;
}
.custom-section-link-with-description .custom-section-heading {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
}
.custom-section-link-with-description .custom-section-desc {
  margin: 0;
  font-size: 1rem;
}
.custom-section-link-with-description a {
  align-self: var(--btn-align, flex-start);
}
{% endstylesheet %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'text' %}
      <div style="text-align: {{ block.settings.alignment }};" {{ block.shopify_attributes }}>
        {{ block.settings.text }}
      </div>

    {% when 'button' %}
      {% if block.settings.link and block.settings.label %}
        <a href="{{ block.settings.link }}"
           class="{{ block.settings.style }}"
           {% if block.settings.open_new_tab %}target="_blank" rel="noopener"{% endif %}
           {{ block.shopify_attributes }}>
          {{ block.settings.label }}
        </a>
      {% endif %}

    {% when 'link_with_description' %}
      <div class="custom-section-link-with-description"
           {{ block.shopify_attributes }}
           style="
             --gap: {{ block.settings.gap }}px;
             --align: {{ block.settings.text_alignment }};
             --btn-align: {% if block.settings.text_alignment == 'center' %}center{% elsif block.settings.text_alignment == 'right' %}flex-end{% else %}flex-start{% endif %};
             --icon-gap: {{ block.settings.icon_gap }}px;
             --icon-size: {{ block.settings.icon_size }}px;
           ">
           <div class="custom-section-icon">
          <span aria-hidden="true" class="icon p-2" data-icon="hco-logo-stacked" data-testid="icon"></span>
          <span aria-hidden="true" class="icon p-2" data-icon="gilly-hicks-stacked-small" data-testid="icon"></span>
          </div>
        {% comment %}--- ICON (Image Picker → SVG → Class) ---{% endcomment %}
        {% comment %} {% if block.settings.icon_image != blank %}
          <div class="custom-section-icon">
            <img src="{{ block.settings.icon_image | img_url: 'master' }}"
                 alt="{{ block.settings.heading | escape }}"
                 loading="lazy">
          </div>
        {% elsif block.settings.icon_svg != blank %}
          <div class="custom-section-icon">
            {{ block.settings.icon_svg }}
          </div>
        {% elsif block.settings.icon_class != blank %}
          <div class="custom-section-icon">
            <i class="{{ block.settings.icon_class }}"></i>
          </div>
        {% endif %} {% endcomment %}

        {% comment %}--- HEADING ---{% endcomment %}
        {% if block.settings.heading != blank %}
          <h3 class="custom-section-heading">{{ block.settings.heading }}</h3>
        {% endif %}

        {% comment %}--- DESCRIPTION ---{% endcomment %}
        {% if block.settings.description != blank %}
          <p class="custom-section-desc">{{ block.settings.description }}</p>
        {% endif %}

        {% comment %}--- BUTTON ---{% endcomment %}
        {% if block.settings.button_link and block.settings.button_label %}
          <a href="{{ block.settings.button_link }}"
             class="{{ block.settings.style_class }}"
             {% if block.settings.open_new_tab %}target="_blank" rel="noopener"{% endif %}>
            {{ block.settings.button_label }}
          </a>
        {% endif %}
      </div>
  {% endcase %}
{% endfor %}

